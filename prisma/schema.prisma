generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model EventLog {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  ts        Int
  page      String
  type      String
  meta      Json
  payload   Json

  @@index([createdAt])
  @@index([type])
  @@index([page])
}

model TrialSummary {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  meta      Json
  isInappropriate        Boolean
  confirmedImportantInfo Boolean
  totalTimeMs            Int
  extras   Json?
  @@index([createdAt])
}
